<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="viewItemBorderPane" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="500.0"
            styleClass="background" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="pl.erp.fx.controller.ViewItemController">
    <center>
        <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="text" text="Name"/>
                <TextField fx:id="nameTextField"/>
                <Label styleClass="text" text="Quantity"/>
                <TextField fx:id="quantityTextField"/>
                <Label styleClass="text" text="QuantityType"/>
                <ComboBox fx:id="quantityTypeComboBox" prefWidth="200.0"/>
            </children>
            <padding>
                <Insets left="10.0" right="10.0"/>
            </padding>
        </VBox>
    </center>
    <top>
        <Label styleClass="title" text="View Item" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="10.0"/>
            </BorderPane.margin>
        </Label>
    </top>
    <bottom>
        <Button fx:id="okButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" styleClass="save-button"
                text="OK" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0"/>
            </BorderPane.margin>
        </Button>
    </bottom>
    <stylesheets>
        <URL value="@../css/crud.css"/>
        <URL value="@../css/global-colors.css"/>
    </stylesheets>
</BorderPane>
