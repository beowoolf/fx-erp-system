<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="pl.erp.fx.controller.EmployeeController">
    <center>
        <TableView fx:id="employeeTableView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
            </columns>
        </TableView>
    </center>
    <top>
        <HBox prefHeight="50.0" prefWidth="1024.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="addButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0"
                        styleClass="employee-button" text="Add"/>
                <Button fx:id="viewButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0"
                        styleClass="employee-button" text="View"/>
                <Button fx:id="editButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0"
                        styleClass="employee-button" text="Edit"/>
                <Button fx:id="deleteButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0"
                        styleClass="employee-button" text="Delete"/>
                <Button fx:id="refreshButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0"
                        styleClass="employee-button" text="Refresh"/>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" top="10.0"/>
            </BorderPane.margin>
        </HBox>
    </top>
    <stylesheets>
        <URL value="@../css/employee.css"/>
        <URL value="@../css/global-colors.css"/>
    </stylesheets>
</BorderPane>
