                    <VBox.margin>
                        <Insets right="80.0"/>
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER_RIGHT" prefWidth="200.0" spacing="20.0">
                    <children>
                        <Label styleClass="text" text="Password"/>
                        <PasswordField fx:id="passwordTextField"/>
                    </children>
                    <VBox.margin>
                        <Insets right="80.0"/>
                    </VBox.margin>
                </HBox>
                <Button fx:id="loginButton" mnemonicParsing="false" styleClass="login-button" text="Log in"/>
            </children>
        </VBox>
    </children>
    <stylesheets>
        <URL value="@../css/login.css"/>
        <URL value="@../css/global-colors.css"/>
    </stylesheets>
</AnchorPane>
