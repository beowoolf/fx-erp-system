            minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
            styleClass="background" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="pl.erp.fx.controller.LoginController">
    <children>
        <Button fx:id="exitButton" layoutX="503.0" layoutY="27.0" maxHeight="40.0" maxWidth="40.0" minHeight="40.0"
                minWidth="40.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" styleClass="exit-button"
